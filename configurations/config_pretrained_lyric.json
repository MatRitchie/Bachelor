
 {
    "dataset_reader": {
      "type": "ranker",
      "tokenizer": {
        "type": "whitespace"
    },
      "token_indexers": {
        "tokens": {
          "type": "single_id"
        }
      }  
    },
    
    "train_data_path": "/content/gdrive/My Drive/Kaggle/LYRICS_DATASET_train.csv",
    "validation_data_path": "/content/gdrive/My Drive/Kaggle/LYRICS_DATASET_dev.csv",
   
    "model": {
      "type": "ranker",
      "dropout": 0.35,
      "text_field_embedder": {
        "token_embedders": {
          "tokens": {
            "type": "embedding",
            "pretrained_file": "/content/gdrive/My Drive/Kaggle/word2vec_lyrics.txt", 
            "embedding_dim": 300
          }
        }
      },
      "relevance_matcher": {
        "input_dim": 300,
        "type": "boe_encoder"
      }
    },
    "data_loader": {
      "type": "pytorch_dataloader",
      "batch_size" : 8
    },
    "trainer": {
      "num_epochs": 5,
      "validation_metric": "+mrr",
      "cuda_device": -1,
      "optimizer": {
        "type": "adam",
        "lr": 0.0001
      },
  
      "learning_rate_scheduler": {
          "type": "reduce_on_plateau",
          "factor": 0.5,
          "mode": "max",
          "patience": 0
      }
    }
  }