
 {
  "dataset_reader": {
    "type": "ranker",
    "tokenizer": {
      "type": "pretrained_transformer",
      "model_name": "google/bert_uncased_L-2_H-128_A-2"
    },
    "token_indexers": {
      "tokens": {
        "type": "pretrained_transformer",
        "model_name": "google/bert_uncased_L-2_H-128_A-2"
        
      }
    },
    "max_tokens": 5000    
  },
  
  "train_data_path": "/content/gdrive/My Drive/Kaggle/LYRICS_DATASET_train.csv",
  "validation_data_path": "/content/gdrive/My Drive/Kaggle/LYRICS_DATASET_dev.csv",
 
  "model": {
    "type": "ranker",
    "dropout": 0.35,
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "pretrained_transformer",
          "model_name": "google/bert_uncased_L-2_H-128_A-2"
        }
      }
    },
    "relevance_matcher": {
      "input_dim": 128,
      "type": "bert_cls"
    }
  },
  "data_loader": {
    "batch_size" : 8

  },
  "trainer": {
    "num_epochs": 5,
    "validation_metric": "+auc",
    "cuda_device": -1,
    "optimizer": {
      "type": "adam",
      "lr": 0.0001
    },

    "learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "factor": 0.5,
        "mode": "max",
        "patience": 0
    }
  }
}